<tbody>

<h1> STUDENT REVIEWS </h1>
  <%= form_for(@studentreview) do |f| %>
  <%= f.collection_select :company_id , @company, :id, :compname, :prompt => 'Select Company'%>
  <%= f.submit "search"%>
  <% end %>
  <p id="notice"><%= notice %></p>
  <div class = "main">
  <table class = "col-lg-12 col-md-12 col-sm-12 col-xs-12">
  <tr>
    <th width= 10%>Roll Number</th>
    <th width= 15%>Comapany Name</th>
    <th width= 75%>Student Review</th>
  </tr>
<% @user.each do |studentfeed| %>
  <tr>
    <td width= 10%><%= studentfeed.name %></td>
    <td width= 15%><%= studentfeed.companyname %></td>
    <td width= 75%>
      <% if studentfeed.feeback.length > 1000 %>
        <%= truncate studentfeed.feeback, length:1000 %>
        <%= link_to '...read more', studentfeed,:target=>"_blank" %> </td>
      <% else %>
        <%= studentfeed.feeback %>
      <% end %>
    <!--<td><%= studentfeed.feeback %></td>-->
  </tr>
<% end %>

</table>
</div>
<br>
