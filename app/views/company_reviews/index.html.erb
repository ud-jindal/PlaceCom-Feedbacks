<tbody>
<h1> COMPANY REVIEWS </h1>
	<%= form_for(@companyreview) do |f| %>
    <%= f.collection_select :company_id , @company, :id, :compname, :prompt => 'Select Company'%>
    <%= f.submit "search"%>
    <% end %>
<% @user.each do |companyreview| %>
	<tr>
	<p>
  <strong>Company:</strong>
  <%= companyreview.name %>
</p>

<p>
  <strong>year:</strong>
  <%= companyreview.year %>
</p>

<p>
  <strong>feedback:</strong>
  <%= companyreview.feedback %>
</p>
	</tr>
<% end %>
</tbody>
